{{!< default}} <section class="py-6 sm:py-10 md:py-16 bg-neutral-50">
    <div class="container-custom overflow-hidden">
        {{#tag}}
        <header class="mb-6 sm:mb-8 md:mb-12 text-center">
            <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-2 sm:mb-3 md:mb-4">{{name}}</h1>
            <p class="text-neutral-600 text-sm sm:text-base md:text-lg max-w-2xl mx-auto">
                {{#if description}}
                {{description}}
                {{else}}
                Coleção de {{plural ../pagination.total empty='artigos' singular='% artigo' plural='% artigos'}}
                {{/if}}
            </p>
        </header>
        {{/tag}}

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 md:gap-8">
            {{#foreach posts}}
            {{> post-card}}
            {{/foreach}}
        </div>

        {{pagination}}
    </div>
    </section>