{{!< default}} <section class="py-10 md:py-16 bg-gray-50">
    <div class="container-custom">
        {{#tag}}
        <header class="mb-8 md:mb-12 text-center">
            <h1 class="text-3xl md:text-4xl font-bold mb-3 md:mb-4">{{name}}</h1>
            <p class="text-gray-600 text-base md:text-lg max-w-2xl mx-auto">
                {{#if description}}
                {{description}}
                {{else}}
                Coleção de {{plural ../pagination.total empty='artigos' singular='% artigo' plural='% artigos'}}
                {{/if}}
            </p>
        </header>
        {{/tag}}

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
            {{#foreach posts}}
            {{> post-card}}
            {{/foreach}}
        </div>

        {{pagination}}
    </div>
    </section>