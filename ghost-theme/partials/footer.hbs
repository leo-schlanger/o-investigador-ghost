<footer class="bg-brand-dark text-white">

    {{!-- Main Footer Content --}}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 py-12 md:py-16">
        <div class="grid grid-cols-1 md:grid-cols-12 gap-10 md:gap-8">

            {{!-- Brand Column --}}
            <div class="md:col-span-5">
                <a href="{{@site.url}}" class="inline-flex flex-col leading-none mb-4">
                    <span class="font-display font-extrabold text-white text-2xl md:text-3xl tracking-tight">
                        investigador
                    </span>
                    <span class="font-display text-primary-300 text-[9px] md:text-[11px] font-normal tracking-[0.25em] self-end -mt-0.5">
                        jornal online
                    </span>
                </a>
                <p class="text-primary-200 text-sm leading-relaxed max-w-sm mt-3">
                    {{@site.description}}
                </p>
            </div>

            {{!-- Links Column --}}
            <div class="md:col-span-3">
                <h3 class="text-sm font-bold mb-4 uppercase tracking-widest text-primary-300">Links</h3>
                <ul class="space-y-3 text-sm text-white/80">
                    {{navigation type="secondary"}}
                </ul>
            </div>

            {{!-- Social Column --}}
            <div class="md:col-span-4">
                <h3 class="text-sm font-bold mb-4 uppercase tracking-widest text-primary-300">Social</h3>
                <div class="flex gap-4">
                    {{#if @site.facebook}}
                    <a href="{{facebook_url @site.facebook}}" target="_blank" rel="noopener"
                        class="text-white/80 hover:text-white transition text-sm font-medium">Facebook</a>
                    {{/if}}
                    {{#if @site.twitter}}
                    <a href="{{twitter_url @site.twitter}}" target="_blank" rel="noopener"
                        class="text-white/80 hover:text-white transition text-sm font-medium">Twitter</a>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>

    {{!-- Bottom Bar --}}
    <div class="border-t border-white/10">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 py-5 text-center text-xs md:text-sm text-primary-300">
            &copy; {{date format="YYYY"}} {{@site.title}}. Todos os direitos reservados.
        </div>
    </div>
</footer>
