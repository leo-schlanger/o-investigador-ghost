<div class="ad-slot-container flex justify-center my-4 sm:my-6 md:my-8 px-2 sm:px-0">
    <div class="ad-slot bg-neutral-100 flex flex-col items-center justify-center text-neutral-400 text-[10px] sm:text-xs uppercase tracking-widest border border-neutral-200 relative overflow-hidden group"
        style="{{#match type "leaderboard"}}width: 100%; max-width: 728px; height: 90px;{{else match type "mpu"
        }}width: 100%; max-width: 300px; height: 250px;{{else}}width: 100%; height: 100px;{{/match}}">

        <span class="z-10 group-hover:hidden">Publicidade</span>
        <span class="hidden group-hover:block z-10 font-bold text-neutral-500">{{label}}</span>

        {{!-- Pattern for mock visualization --}}
        <div class="absolute inset-0 opacity-5"
            style="background-image: radial-gradient(#000 1px, transparent 1px); background-size: 10px 10px;"></div>
    </div>
</div>